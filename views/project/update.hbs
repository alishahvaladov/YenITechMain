<div class="add-project">
    {{#if project}}
        {{> messages}}
        <form action="/projects/update/{{project.id}}" method="post">
            <div class="form-row d-flex justify-content-between my-4">
                <div class="form-group col-sm-12 col-md-6 px-2">
                    <label for="inputEmail4">Project Name</label>
                    <input type="text" class="form-control" id="inputEmail4" placeholder="Project Name" name="name" value="{{project.name}}">
                </div>
                <div class="form-group col-sm-12 col-md-6 px-2">
                    <label for="inputPassword4">Project Address</label>
                    <input type="text" class="form-control" id="inputPassword4" placeholder="Project Address" name="address" value="{{project.address}}">
                </div>
            </div>
            <div class="form-group my-4 px-2">
                <label for="inputAddress">Project Manager</label>
                    <select id="inputState" class="form-control" name="project_manager_id">
                        <option disabled hidden>Choose</option>
                        <option  value="{{project.project_manager_id}}"selected> asdasdsad</option>
                        <option value="12">Ali Shahvaladov</option>
                        <option value="13">Tural Hasanov</option>
                    </select>
            </div>
            <div class="form-group my-4 px-2">
                <label for="inputAddress">Parent Project</label>
                    <select id="inputState" class="form-control" name="parent_id">
                        <option disabled hidden>Choose</option>
                        <option value="{{project.parent_id}}" selected>asdsad</option>
                        <option value="13">GH</option>
                        <option value="15">YH</option>
                    </select>
            </div>
            <button type="submit" class="btn btn-primary d-flex float-end mt-2">Update Project</button>
        </form>
    {{/if}}
</div>