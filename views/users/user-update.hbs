{{> messages}}
<div class="message d-none">

</div>
<form class="update-form" action="" method="post">
    <div class="form-row row">
    <div class="form-group col-md-6">
            <label for="empSelect">Employee</label>
            <input type="text" class="form-control" name="emp_id" id="employee" disabled>
        </div>
        <div class="form-group col-md-6">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username">
        </div>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" id="email">
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select name="role" id="role" class="form-select">
            
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update User</button>
    <button type="button" class="btn btn-primary mt-3" id="updatePasswordBtn">Update Password</button>
</form>

<div class="update-password-modal d-none position-fixed justify-content-center align-items-center">
    <div class="update-password-modal-container">
        <h1>Enter password</h1>
        <div class="password-input my-2 d-flex justify-content-between">
            <label class="mx-2" for="password">Password</label>
            <input class="mx-2" type="password" id="password">
        </div>
        <div class="retype-password-input my-2 d-flex justify-content-between">
            <label class="mx-2" for="retypePassword">Retype password</label>
            <input class="mx-2" type="password" id="retypePassword">
        </div>
        <div class="update-password-btns btn-group d-flex justify-content-between my-2">
            <button class="btn btn-outline-danger" id="passwordUpdateCancel">Ləğv Et</button>
            <button class="btn btn-outline-success" id="passwordUpdateSubmit">Təsdiqlə</button>
        </div>
    </div>
</div>

<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/user-update-api.js"></script>