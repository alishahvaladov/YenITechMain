{{> messages}}
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">İstifadəçi qeydiyyat formu</h5>
    </div>
    <div class="card-body">
        <form action="/register" method="post">
            <div class="form-row row">
                <div class="form-group col-md-6">
                    <label for="empSelect">Employee</label>
        <!--            <input type="email" class="form-control" id="empSelect" placeholder="Email">-->
                    <select class="form-select" name="emp_id" id="empSelect">
                        <option value="0" hidden>Choose Name</option>
                        {{#if result}}
                            {{#each result}}
                                <option value="{{this.empID}}">{{this.empName}} {{this.empLName}} {{this.empFName}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Username</label>
                    <input type="text" class="form-control" name="username" id="inputPassword4" placeholder="surname.name">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Email</label>
                <input type="text" name="email" class="form-control" id="inputAddress" placeholder="example@example.com">
            </div>
            <div class="form-group">
                <label for="inputState">Role</label>
                <select name="role" id="inputState" class="form-select">
                    <option selected hidden>Choose Role</option>
                    {{#if roles}}
                        {{#each roles}}
                            <option value="{{@key}}">{{this}}</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Create User</button>
        </form>
    </div>
</div>
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/add-user.js"></script>