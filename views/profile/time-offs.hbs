    <table class="table table-hover my-0" style="margin: 0 !important;">
        <div class="container">
            <h1 class="text-center my-5">Məzuniyyətlərim</h1>
            <thead>
            <th>Əməkdaş</th>
            <th>Məzuniyyətin Tipi</th>
            <th>Başlama Tarixi</th>
            <th>Bitmə Tarixi</th>
            <th>İşə qayıtma tarixi</th>
            <th>Status</th>
            </thead>
            <tbody>
                <tr>
                    <td class="bold">Waiting</td>
