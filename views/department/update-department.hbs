<div class="add-department">
    {{#if department}}
        <form action="/department/update/{{department.id}}" method="post">
            Department Name <input type="text" name="name" value="{{department.name}}">
            Project <input type="number" name="project_id" value="{{department.project_id}}">
            Department Manager <input type="number" name="department_manager_id" value="{{department.department_manager_id}}">

            <button type="submit">Update Department</button>

            {{> messages}}
        </form>
    {{/if}}
</div>