    </div>
    <div class="dashboard-right">
        <div class="dashboard-navigation">
            <div class="search">
                <span class="search-icon"><i class="fas fa-search"></i></span>
                <input type="text" name="q" placeholder="Search">
            </div>
            <div class="date">
                <span class="date-icon"><i class="far fa-calendar-alt"></i></span>
                <span class="date-with-text">Tarix: </span>
                <span id="date" class="date-with-dt"></span>
            </div>
            <div class="time">
                <span class="date-icon"><i class="far fa-clock"></i></span>
                <span class="date-with-text">Saat: </span>
                <span id="time" class="date-with-dt"></span>
            </div>
            <div class="notification-profile">
                <div class="notification">
                    <div class="notification-bell">
                            <span class="bellBtn">
                                <i class="far fa-bell"></i>
                            </span>
                    </div>
                </div>
                <div class="profile-container">
                    <div class="profile">
                        <!--                        <span class="userBtn"><i class="far fa-user"></i></span>-->
                        <img src="/assets/img/john.jpg" alt="">
                    </div>
                    <span class="profile-dropdown-icon">
                        <i class="fas fa-caret-down"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="dropdown-for-profile">
            <div class="profile-dropdown">
                <div class="profile-dropdown-item"><a class="profile-dropdown-item-link" href="#">Profil <i class="bi bi-person-circle profile-dropdown-item-link"></i></a> </div>
                <div class="dropdown-divider-profile"></div>
                <div class="profile-dropdown-item"><a class="profile-dropdown-item-link" href="/logout">Çıxış <i class="bi bi-arrow-right-square profile-dropdown-item-link"></i></a> </div>
            </div>
