<div class="department-table">
    {{> messages }}
    <h2 class="text-center">Barmaq İzləri Qeydiyyatı</h2>
    <table class="table table-striped">
        <div class="container">
            <thead>
            <th>Employee</th>
            <th>Project</th>
            <th>Department</th>
            <th>Position</th>
            <th>Finger Print</th>
            <th>Date</th>
            <th>
                <button id="fpUploadBtn" class="btn btn-outline-success btn-sm" type="button">Upload</button>
            </th>
            </thead>
            
            <thead>
            <th><input class="form-control" type="text" name="qEmployee" id="qEmployee"></th>
            <th><input class="form-control" type="text" name="qProject" id="qProject"></th>
            <th><input class="form-control" type="text" name="qDepartment" id="qDepartment"></th>
            <th><input class="form-control" type="text" name="qPosition" id="qPosition"></th>
            <th>
                <div class="d-flex justify-content-between">
                    <input class="form-control" type="time" name="qMin" id="qMin" placeholder="min">
                    <div class="mx-1"></div>
                    <input class="form-control" type="time" name="qMax" id="qMax" placeholder="max">
                </div>
            </th>
            <th class="d-flex justify-content-between">
                <input class="form-control" type="date" name="qDate" id="qDate">
                <div class="mx-1" id="resetDate">
                    <span class="btn btn-outline-secondary d-flex justify-content-center align-items-center h-100">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </span>
                </div>
            </th>
            <th></th>
            </thead>
            <tbody>
                
            </tbody>
        </div>
    </table>
    <div class="pagination d-flex justify-content-center">
        <div class="pagination-container w-50 d-flex justify-content-between">
            <button class="pagination-item btn btn-outline-dark btn-sm active disabled">1</button>
        </div>
    </div>
</div>
<div class="fprint-modal position-fixed w-100">
    <div class="fprint-modal-container w-100 h-100 d-flex justify-content-center align-items-center">
        <form action="/fprints" method="post" enctype="multipart/form-data">
            <div class="fprint-background d-flex flex-column p-5">
                <label for="upload" class="btn btn-outline-dark btn-sm mb-3">Fayl Seç</label>
                <input class="d-none" type="file" id="upload" name="file">
                <div class="buttons">
                    <span id="fpCancelBtn" class="btn btn-outline-danger btn-sm" type="button">Ləğv et</span>
                    <button class="btn btn-outline-primary btn-sm" type="submit">Təsdiqlə</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/f-print-api.js"></script>