<div class="salaries">
    {{> messages }}
    <table class="table table-striped">
        <div class="container">
            <thead>
                <th>Employee</th>
                <th>Gross</th>
                <th>Salary Date</th>
                <th><button class="btn btn-success" id="export"><i class="bi bi-file-earmark-excel"></i> Export</button></th>
            </thead>
            <thead>
                <th><input class="py-1 px-2" type="text" id="emp"></th>
                <th><input class="py-1 px-2" type="number" id="min" placeholder="min"> <input class="py-1 px-2" type="number" id="max" placeholder="max"> </th>
                <th>
                    <div class="d-flex">
                        <select class="py-1 px-2 mx-1" id="month">
                            
                        </select>
                        <select class="py-1 px-2 mx-1" id="year">
                        </select>
                        <div class="mx-1" id="resetDate">
                            <span class="btn btn-outline-primary d-flex justify-content-center align-items-center">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </span>
                        </div>
                    </div>
                </th>
                <th class="text-center"></th>
            </thead>
            <tbody>
                <tr>
                    <td class="bg-warning bg-opacity-50 text-black bold">Waiting</td>
                    <td class="bg-warning bg-opacity-50 text-black bold">Waiting</td>
                    <td class="bg-warning bg-opacity-50 text-black bold">Waiting</td>
                    <td class="bg-warning bg-opacity-50 text-black bold">Waiting</td>
                </tr>
            </tbody>
        </div>
    </table>
</div>

<div class="pagination d-flex justify-content-center">
    <div class="pagination-container w-50 d-flex justify-content-between">
        <button class="pagination-item btn btn-outline-dark btn-sm active disabled">1</button>
    </div>
</div>

<div class="loading position-absolute top-0 w-100" style="left: 0; height: 100vh">
    <div class="loading-container bg-light bg-opacity-25 w-100 h-100 d-flex justify-content-center align-items-center">
        <img src="/assets/img/loading-3.gif" style="width: 70px">
    </div>
</div>

<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/salary-by-months-api.js"></script>
